<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        tools:context=".MainActivity">
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline"
                                                android:orientation="vertical"
                                                app:layout_constraintGuide_percent="0.50121653"/>
    <EditText
            android:layout_width="155dp"
            android:layout_height="66dp"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/etA" android:layout_marginTop="60dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline" app:layout_constraintHorizontal_bias="0.742"
            android:textSize="24sp" android:text="0" android:textAlignment="center"/>
    <EditText
            android:layout_width="162dp"
            android:layout_height="66dp"
            android:inputType="numberSigned"
            android:ems="10"
            android:id="@+id/etB" android:layout_marginTop="60dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline" app:layout_constraintHorizontal_bias="0.703"
            android:textSize="24sp" android:text="0" android:textAlignment="center"/>
    <Button
            android:text="+1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn1A" android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/etA" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.617" android:onClick="unoA"/>
    <Button
            android:text="+1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn1B" android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/etB" app:layout_constraintStart_toStartOf="@+id/guideline"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.544" android:onClick="unoB"/>
    <Button
            android:text="+2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnA2" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/btn1A" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.617" android:onClick="dosA"/>
    <Button
            android:text="+2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnB2" app:layout_constraintStart_toStartOf="@+id/guideline"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/btn1B"
            app:layout_constraintHorizontal_bias="0.544" android:onClick="dosB"/>
    <Button
            android:text="+3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnA3" android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/btnA2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/guideline"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.617" android:onClick="tresA"/>
    <Button
            android:text="+3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnB3" app:layout_constraintStart_toStartOf="@+id/guideline"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/btnB2"
            app:layout_constraintHorizontal_bias="0.544" android:onClick="tresB"/>
    <Button
            android:text="Reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnReset" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.498" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" android:onClick="reset"/>
</androidx.constraintlayout.widget.ConstraintLayout>